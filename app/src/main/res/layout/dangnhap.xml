<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgdn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dangnhap" />

    <Button
        android:id="@+id/btndn"
        android:layout_width="194dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#565555"
        android:text="ĐĂNG NHẬP"
        app:layout_constraintEnd_toEndOf="@+id/imgdn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imgdn"
        app:layout_constraintTop_toBottomOf="@+id/edt2dn" />

    <TextView
        android:id="@+id/txt1dn"
        android:layout_width="194dp"
        android:layout_height="49dp"
        android:layout_marginTop="244dp"
        android:gravity="center"
        android:text="ĐĂNG NHẬP"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgdn"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imgdn"
        app:layout_constraintTop_toTopOf="@+id/imgdn" />

    <TextView
        android:id="@+id/txt2dn"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Bạn chưa có tài khoản?        Tạo tài khoản"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgdn"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/imgdn"
        app:layout_constraintTop_toBottomOf="@+id/btndn" />

    <EditText
        android:id="@+id/edt1dn"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/nguoi"
        android:ems="10"
        android:hint="Tên tài khoản"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/imgdn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imgdn"
        app:layout_constraintTop_toBottomOf="@+id/txt1dn" />

    <EditText
        android:id="@+id/edt2dn"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/okhoa"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imgdn"
        app:layout_constraintTop_toBottomOf="@+id/edt1dn" />

</androidx.constraintlayout.widget.ConstraintLayout>